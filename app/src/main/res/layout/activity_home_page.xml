<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/seatsGrid"
        android:layout_width="263dp"
        android:layout_height="106dp"
        android:layout_margin="16dp"
        android:columnCount="5"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@+id/bookButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="132dp" />

    <Button
        android:id="@+id/bookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="حجز المقاعد"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seatsGrid" />

    <Button
        android:id="@+id/viewTicketsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="استعراض المقاعد المحجوزة"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/logoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTicketsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تسجيل خروج"
        tools:layout_editor_absoluteX="135dp"
        android:background="@drawable/button_background"
        tools:layout_editor_absoluteY="396dp" />

    <Button
        android:id="@+id/cancelReservationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="إلغاء الحجز"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />
</androidx.constraintlayout.widget.ConstraintLayout>